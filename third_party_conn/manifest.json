{
  "manifest_version": 2,
  "name": "web-tracker",
  "version": "1.0",
  "homepage_url": "https://github.com/P-ASilva/web_tracker.git",
  "permissions": [
    "webRequest",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
  "default_title": "Detector de Conex√µes de Terceira Parte"
  }
}
